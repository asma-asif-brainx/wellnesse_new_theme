{% liquid
  assign mt = block.settings.mt | prepend: 'mt-'
  assign mb = block.settings.mb | prepend: 'mb-'
%}

{% liquid
  assign page_handle = block.settings.page_handle
  assign page = pages[page_handle]
%}

<div id="page-content" class="{{ mt }} {{ mb }}" {{ block.shopify_attributes }}>
  {% if page %}
    {% if block.settings.show_title %}
      <h1>{{ page.title }}</h1>
    {% endif %}
    <div class="page-content">
      {{ page.content }}
    </div>
  {% else %}
    <p>No page found with the handle "{{ page_handle }}"</p>
  {% endif %}
</div>
