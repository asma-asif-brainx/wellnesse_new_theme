{% if settings.cart_discount %} 
  <div id="cart-discount">
    <button 
      class="btn btn-light btn-sm d-flex align-items-center justify-content-start px-5 w-100"
      type="button" 
      data-bs-toggle="collapse" 
      data-bs-target="#cart-discount-collapse" 
      aria-expanded="false" 
      aria-controls="cart-discount-collapse">
      <div class="d-flex align-items-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" class="me-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path><line x1="7" y1="7" x2="7.01" y2="7"></line>
      </svg>
        {{ 'cart.discount.title' | t }}
      </div>
    </button>
    <div id="cart-discount-collapse" class="collapse">
      <div class="px-2 pt-4 pb-4">
        <div class="d-flex align-items-center">
          <input 
            type="text" 
            class="form-control form-control-sm" 
            placeholder="{{ 'cart.discount.label' | t }}" 
            aria-label="{{ 'cart.discount.label' | t }}">
          <button 
            class="ms-3 btn btn-secondary btn-sm" 
            type="button"
            onclick="onCartDiscountClick(this, event)">
            {{ 'cart.discount.button' | t }}
          </button>
        </div>  
      </div>
    </div>
  </div>
{% endif %}