{% liquid 
    if request.page_type == 'cart' 
        assign show_feature = section.settings.cart_show_terms_checkbox
    else
        assign show_feature = settings.cart_drawer_show_terms_checkbox
    endif
%}

{% if show_feature %}
    <div class="form-check mb-3">
        <input
            id="cart-terms-checkbox"
            class="form-check-input" 
            type="checkbox"
            value="{{ 'general.accessibility.accepted' | t }}"
            name="attributes[{{ 'cart.terms_checkbox_label' | t }}]">
        <label 
            class="form-check-label" 
            for="cart-terms-checkbox">
            {{ 'cart.terms_checkbox_label_html' | t }}
        </label>
      </div>
{% endif %}