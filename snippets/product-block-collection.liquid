{%- if product.metafields.custom.associated_collection.value != blank -%}
  <style>
    .artist_card {
      gap: 16px;
      width: max-content;
      text-decoration: none;
    }
    .artist_image_container {
      border-radius: 50%;
      overflow: hidden;
      outline: solid 1px gray;
      outline-offset: 2px;
      height: 42px;
      width: 42px;
    }
    .artist_image {
      object-fit: cover;
      transition: all ease 0.3s;
    }
    .artist_card:hover .artist_image {
      transform: scale(1.1);
    }
    .artist_subtitle {
      font-size: 0.75rem;
      display: flex;
      align-items: center;
      transition: all ease 0.3s;
    }
    .artisit_title, 
    .artist_subtitle {
      text-decoration: none;
      margin: 0px;
    }
    .artist_card:hover .artist_subtitle {
      text-decoration: underline;
      opacity: 0.5;
    }
  </style>
  {% assign collection = product.metafields.custom.associated_collection.value %}
  <a href="/collections/{{ collection.handle }}" class="d-flex artist_card">
    <div class="artist_image_container">
      <img class="artist_image" src="{{ collection.featured_image | image_url }}" alt="{{ collection.featured_image.alt | escape }}" width="42" height="42" loading="lazy" />
    </div>
    <div class="d-flex flex-column justify-content-center">
      <p class="artisit_title">{{ block.settings.prefix }} {{ collection.title }}</p>
      {% if block.settings.sub_title != blank %}
        <p class="artist_subtitle">{{ block.settings.sub_title }} {% if block.settings.show_arrow %}{% render 'icons', icon: "arrow-right" size: "10px" %}{% endif %}</p>
      {% endif %}
    </div>
  </a>
{% endif %}