{% unless product.metafields.custom.product_promo_title == blank %}
    <div 
        class="product-gallery-promo-text"
        data-bs-container="body" 
        data-bs-toggle="popover" 
        data-bs-placement="top" 
        data-bs-trigger="hover focus"
        data-bs-custom-class="product-gallery-promo-text-tooltip"
        data-bs-content="{{ product.metafields.custom.product_promo_description }}"
        style="background-color: {{ section.settings.product_promo_background_color | default: settings.color_primary }};">
        <div class="mb-0" style="color: {{ section.settings.product_promo_font_color | default: settings.color_body_text }};">
            {{ product.metafields.custom.product_promo_title }}
        </div>
        <div class="d-flex align-items-center">
            {{ 'product.promo_learn_more' | t }}
            <svg class="ms-2" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line>
            </svg>
        </div>
    </div>
{% endunless %}