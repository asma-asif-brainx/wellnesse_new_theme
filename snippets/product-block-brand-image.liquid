{% liquid 
    assign pt = block.settings.pt | prepend: 'pt-'
    assign pb = block.settings.pb | prepend: 'pb-'
    assign mt = block.settings.mt | prepend: 'mt-'
    assign mb = block.settings.mb | prepend: 'mb-'
    assign width = block.settings.img_width
    assign height = block.settings.img_height
    assign metafield_namespace = block.settings.metafield | split: '.' | first
    assign metafield_key = block.settings.metafield | split: '.' | last
%}
<div id="product-block-brand-image" class="{{ pt }} {{ pb }} {{ mt }} {{ mb }}">
    <img class="img-fluid" src="{{ product.metafields[metafield_namespace][metafield_key] | image_url: width: width, height: width }}"  width="{{ width }}" height="{{ height }}" loading="lazy">
</div>