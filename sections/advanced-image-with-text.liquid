{% liquid 
    assign pt = section.settings.pt | prepend: 'pt-'
    assign pb = section.settings.pb | prepend: 'pb-'
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'

    assign bg_color = section.settings.bg_color

    if section.settings.bg_gradient
        assign bg_color = bg_color | append: ' bg-gradient'
    endif

    if customer
        assign show_section = section.settings.access_members
    else
        assign show_section = section.settings.access_guests
    endif
%}

{% unless section.settings.bg_image_desktop == blank %}
<style>
  @media (min-width: 768px) {
    #advanced-image-with-text-{{ section.id }} {
      background-image: url({{ section.settings.bg_image_desktop | img_url: '1600x' }});
      background-size: cover;
      background-attachment: fixed;
    }
  }
</style>
{% endunless %}

{% unless section.settings.bg_image_mobile == blank %}
<style>
  @media (max-width: 767px) {
    #advanced-image-with-text-{{ section.id }} {
      background-image: url({{ section.settings.bg_image_mobile | img_url: '800x' }});
      background-size: cover;
      background-attachment: scroll;
    }
  }
</style>
{% endunless %}


{% if show_section %}
<section 
    id="advanced-image-with-text-{{ section.id }}"
    class="advanced-image-with-text overflow-hidden {{ bg_color }} {{ pt }} {{ pb }} {{ mt }} {{ mb }} enter-view">
    <div class="{{ section.settings.container }}">

        <div class="d-lg-none {{ section.settings.text_align_mobile }}">
            {% unless section.settings.subtitle == blank %}
                <div 
                    class="{% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                    data-animate-class="{{ section.settings.animation }}"
                    style="animation-delay: 400ms;">
                    <p class="subtitle text-uppercase fw-500 mb-2 text-muted {{ section.settings.subtitle_font_size_mobile | prepend: 'fs-' }} {{ section.settings.subtitle_font_size_desktop | prepend: 'fs-lg-' }}">
                        {{ section.settings.subtitle }}
                    </p>
                </div>
            {% endunless %}

            {% unless section.settings.title == blank %}
                <div 
                    class="{% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                    data-animate-class="{{ section.settings.animation }}"
                    style="animation-delay: 600ms;">
                        <h2 class="title mb-0 {{ section.settings.title_font_size_mobile | prepend: 'fs-' }} {{ section.settings.title_font_size_desktop | prepend: 'fs-lg-' }}">
                            {{ section.settings.title }}
                        </h2>
                </div>
            {% endunless %}
        </div>
        
        <div class="row align-items-center {{ section.settings.media_align }}">
            <div 
                class="col-md-6 position-relative">
                {% for block in section.blocks %}
                    <img
                        class="img-fluid advanced-image-with-text-img advanced-image-with-text-img-{{ forloop.index }} rounded {{ block.settings.shadow }} {{ block.settings.img_thumbnail }}"
                        src="{{ block.settings.img.src | image_url: width: block.settings.img_width, height: block.settings.img_height, crop: 'center' }}"
                        alt="{{ block.settings.img.alt | escape }}"
                        width="{{ block.settings.img_width }}"
                        height="{{ block.settings.img_height }}"
                        loading="lazy"
                        data-block-type="image" 
                        {{ block.shopify_attributes }}>
                {% endfor %}
            </div>
            <div 
                class="col-md-6 animate__animated animate__faster opacity-0 {{ section.settings.text_align_mobile }} {{ section.settings.text_align_desktop }}" 
                data-animate-class="{% if section.settings.media_align == 'flex-row' %}animate__fadeInRight{% else %}animate__fadeInLeft{% endif %}">
                {% unless section.settings.subtitle == blank %}
                    <div 
                        class="d-none d-lg-block {% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                        data-animate-class="{{ section.settings.animation }}"
                        style="animation-delay: 400ms;">
                        <p class="subtitle text-uppercase fw-500 mb-3 text-muted {{ section.settings.subtitle_font_size_mobile | prepend: 'fs-' }} {{ section.settings.subtitle_font_size_desktop | prepend: 'fs-lg-' }}">
                            {{ section.settings.subtitle }}
                        </p>
                    </div>
                {% endunless %}
                {% unless section.settings.title == blank %}
                    <div 
                        class="d-none d-lg-block {% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                        data-animate-class="{{ section.settings.animation }}"
                        style="animation-delay: 600ms;">
                            <h2 class="title {{ section.settings.title_font_size_mobile | prepend: 'fs-' }} {{ section.settings.title_font_size_desktop | prepend: 'fs-lg-' }}">
                                {{ section.settings.title }}
                            </h2>
                    </div>
                {% endunless %}
                {% unless section.settings.description == blank %}
                    <div 
                        class="{% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                        data-animate-class="{{ section.settings.animation }}"
                        style="animation-delay: 800ms;">
                        <div class="description rte mb-6 {{ section.settings.description_font_size_mobile | prepend: 'fs-' }} {{ section.settings.description_font_size_desktop | prepend: 'fs-lg-' }}">
                            {{ section.settings.description }}
                        </div>
                    </div>
                {% endunless %}
                {% unless section.settings.btn_text == blank %}
                    <div 
                        class="d-inline-flex {% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                        data-animate-class="{{ section.settings.animation }}"
                        style="animation-delay: 1200ms;">
                            <a href="{{ section.settings.btn_url }}" class="btn mb-1 {{ section.settings.btn_color }} {{ section.settings.btn_size }} {{ settings.btn_style }}">
                                <span>{{ section.settings.btn_text }}</span>
                            </a>
                    </div>
                {% endunless %}
            </div>
        </div>
    </div>
</section>
{% endif %}
