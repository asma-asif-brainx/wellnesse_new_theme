            "settings": [
                {
                    "id": "title",
                    "type": "text",
                    "label": "Title",
                    "default": "Title"
                },
                {
                    "id": "disclaimer",
                    "type": "textarea",
                    "label": "Disclaimer"
                },
                {
                    "id": "function",
                    "type": "textarea",
                    "label": "Function",
                    "default": "Function"
                },
                {
                    "id": "description",
                    "type": "textarea",
                    "label": "Description",
                    "default": "Description"
                },
                {
                    "id": "ewg_rating",
                    "type": "range",
                    "label": "EWG Rating#",
                    "min": 0,
                    "max": 10,
                    "default": 1,
                    "unit": "#"
                },
                {
                    "id": "ewg_rating_desc",
                    "type": "text",
                    "label": "EWG Rating Description",
                    "default": "EWG Rating"
                },
                {
                    "id":        "product_ids",
                    "type":      "text",
                    "label":     "Product ids",
                    "info":      "List product ids which contain this ingredient."
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "More Ingredients Listing"
      }
    ]
}
{% endschema %}
