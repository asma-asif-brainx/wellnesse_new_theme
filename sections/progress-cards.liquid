    .bg-blur-3 {
      backdrop-filter: blur(3px);
    }
    #product-progress-{{ section.id }} .progress {
      --bs-progress-height: 0.5rem;
    }
    .card-custom {
      background-color: transparent!important;
      isolation: isolate;
      box-shadow:0.125rem 0.125rem 0.75rem rgb(0 0 0 / 66%);
      border-radius: var(--bs-border-radius);
    }

    @media (max-width: 575px) {
      #product-progress-{{ section.id }} div.row.xs-scroll {
        overflow: auto;
        flex-wrap: nowrap;
        padding: 0 0.5rem 0.5rem;
        margin: 0 -1rem -0.5rem !important;
      }
  
      #product-progress-{{ section.id }} div.row.xs-scroll .col-12 {
