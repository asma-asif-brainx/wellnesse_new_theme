{% if section.blocks.size > 1 %}
    <div class="toothpaste_slider_wrap ">
    {% endif %}
    
      {%- for block in section.blocks -%}
      <div class="hero_slider_item">
        <div class="hero_slider_item_inner {% if section.settings.banner_style_2 %} banner--style_2 {% endif %}">
          <div class="toothpaste-banner_content">
            <h5>{{ block.settings.sub_heading }}</h5>
            <h1>{{ block.settings.heading }}</h1>
            <p>{{ block.settings.text }}</p>
            <div class="hero_slider_btns">
              {% if block.settings.link1 != blank %}
                <a href="{{ block.settings.link1 }}" class="btn btn-primary">{{ block.settings.button_label1 }}</a>
              {% endif %}
              {% if block.settings.link2 != blank %}
                <a href="{{ block.settings.link2 }}">{{ block.settings.button_label2 }}</a>
              {% endif %}
            </div>
          </div>
          <div class="hero_slider_img" style="max-width: {{block.settings.image_max_width}}px;">
            
            <picture>
              {% assign img = block.settings.image %}
              <source media="(min-width:750px)" srcset="{%- if img.width >= 375 -%}{{ img | image_url: width: 375 }} 375w,{%- endif -%}
              {%- if img.width >= 550 -%}{{ img | image_url: width: 550 }} 550w,{%- endif -%}
              {%- if img.width >= 750 -%}{{ img | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if img.width >= 1100 -%}{{ img | image_url: width: 1100 }} 1100w,{%- endif -%}
              {%- if img.width >= 1500 -%}{{ img | image_url: width: 1500 }} 1500w,{%- endif -%}
              {%- if img.width >= 1780 -%}{{ img | image_url: width: 1780 }} 1780w,{%- endif -%}
              {%- if img.width >= 2000 -%}{{ img | image_url: width: 2000 }} 2000w,{%- endif -%}
              {%- if img.width >= 3000 -%}{{ img | image_url: width: 3000 }} 3000w,{%- endif -%}
              {%- if img.width >= 3840 -%}{{ img | image_url: width: 3840 }} 3840w,{%- endif -%}
              {{ img | image_url }} {{ img.width }}w"
    
              sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc(50vw - 130px), calc(100vw - 55px)"
              alt="{{ img.alt | escape }}"
              width="{{ img.width }}"
              height="{{ img.width | divided_by: img.aspect_ratio }}"
              src="{{ img | image_url }}">
              {% if block.settings.m_image != blank %}
              <img alt="{{ block.settings.m_image.alt | escape }}"
              width="{{ block.settings.m_image.width }}"
              height="{{ block.settings.m_image.width | divided_by: block.settings.m_image.aspect_ratio }}"
              src="{{ block.settings.m_image | image_url }}">
              {% endif %}
          </picture>
          </div>
        </div>
      </div>
      {%- endfor -%}
    {% if section.blocks.size > 1 %}
    </div>
    {% endif %}
    
    <style>
    .toothpaste-banner__slider {
        margin: 40px 150px  !important;
        border-radius: 40px;
    }
    {% if section.settings.use_bg_color != blank %}
    .toothpaste-banner__slider {
        background-color: {{ section.settings.bg_color }};
      }
    {% elsif section.settings.bg != blank %}
    .toothpaste-banner__slider{
        background-image: url({{ section.settings.bg | img_url: '1800x' }});
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;  
      }  
    {% endif %}
    .hero_slider_item_inner {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .toothpaste-banner_content {
        width: 55%;
        padding: 3.5rem;
        padding-left:100px;
    }
    
    .toothpaste-banner__slider  .hero_slider_img {
        width: 45%;
        padding-top: 0;
    }
    .hero_slider img {
        width: 100%;
        height: 100%;
        border-radius: 40px;
    }
    
    .toothpaste-banner_content h5 {
        color: #000;
        margin: 0;
        text-transform: uppercase;
        font-size: 17px;
        font-weight: 600;
    }
    
    .toothpaste-banner__slider  .toothpaste-banner_content h1 {
        font-size: 26px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #e15e54;
        margin: 20px 0;
        font-weight: 500;
    }
    
    .toothpaste-banner__slider .toothpaste-banner_content h1 span {
        color: #000;
    }
    .toothpaste-banner__slider .toothpaste-banner_content p {
        color: #000;
        font-size: 16px;
        margin: 0 0 25px;
        opacity:.9;
        line-height: 25px;
    }
    
    .hero_slider_btns {
        width: 100%;
        display: flex;
        justify-content: space-between;
    }
    
    
    .toothpaste-banner__slider .slick-dots {
        position: absolute;
        right: 30px;
        top: 50%;
        transform: translateY(-50%);
    }
    
    .toothpaste-banner__slider .slick-dots button {
        background: #fff;
        opacity: .5;
        cursor: pointer;
    }
    
    .toothpaste-banner__slider .slick-dots .slick-active button {
        opacity: 1;
        height: 12px;
        width: 12px;
    }
    
    .toothpaste-banner__slider .slick-dots li {
        margin: 10px auto;
        text-align: center;
    }
    
    .toothpaste-banner__slider .slick-dots li.slick-active {
        border: 4px solid #ffffff52;
        border-radius: 50%;
    }
    .toothpaste-banner__slider .slick-arrow:active{
      color: #000;
    }
    .toothpaste-banner__slider .slick-prev.slick-arrow {
        position: absolute;
        left: -52px;
        top: 50%;
        writing-mode: tb-rl;
        transform: rotate(-90deg) translateY(-50%);
        background: transparent;
        border: none;
        outline: none;
        font-size: 12px;
        letter-spacing: 1px;
        text-transform: uppercase;
        cursor: pointer;
    }
    .toothpaste-banner__slider .slick-next.slick-arrow {
        position: absolute;
        right: -34px;
        top: 50%;
        transform: rotate(90deg) translateY(-50%);
        background: transparent;
        border: none;
        outline: none;
        font-size: 12px;
        letter-spacing: 1px;
        text-transform: uppercase;
        cursor: pointer;
    }
    .mobile_hero_slider_img{
      display:none;
    }
      .toothpaste-banner__slider img{
        border-radius:unset;
      }
      .toothpaste-banner__slider img{
        border-radius:unset;
     }
     {% comment %} start if style no.2 is checked {% endcomment %}
     .banner--style_2 p {
       font-size: 1.6rem !important;
     }
     .banner--style_2 h1 {
        font-size: 18px !important;
        letter-spacing: 3px !important;
     }
     .banner--style_2 h5 {
        font-size: 45px !important;
     }
     {% if section.settings.banner_style_2 %} 
       .toothpaste-banner__slider img {
         border-radius: 40px;
     }
     {% endif %}
     {% comment %} end if style no.2 is checked {% endcomment %}
      @media screen and (max-width:1450px){
         .toothpaste-banner__slider .toothpaste-banner_content {
          padding: 2.5rem;
          padding-left:80px;
      }
      }
    @media only screen and (min-width:1024px) and (max-width:1600px) {
      .toothpaste-banner__slider img {
        max-height: 100%;
        object-fit: cover;
        object-position:bottom;
      }
    }
      @media only screen and (max-width:1300px) {
      .toothpaste-banner__slider img {
        max-height: 100%;
        object-fit: cover;
        object-position:bottom;
      }
        .toothpaste-banner__slider{
          margin: 40px 70px !important;
        }
    }
    @media only screen and (max-width:1000px){
      .toothpaste-banner__slider{
          margin: 40px !important;
        }
      .toothpaste-banner__slider .slick-dots{
        display: none !important;
      }
      .toothpaste-banner__slider{
        margin:0;
      }
      .toothpaste-banner__slider .hero_slider_item_inner {
        flex-wrap: wrap;
      }
      .toothpaste-banner__slider .hero_slider_img{
        padding-top:0;
      }
     .toothpaste-banner__slider .toothpaste-banner_content {
          width:100%;
          padding: 3rem;
          padding-top:6rem;
      }
     .toothpaste-banner__slider .hero_slider_img {
          width: 100%;
      }
      .toothpaste-banner__slider .toothpaste-banner_content h5{
        font-size:12px;
      }
      .toothpaste-banner__slider .toothpaste-banner_content h1 {
        font-size:24px;
        margin:10px 0;
      }
     .toothpaste-banner__slider .hero_slider_btns{
          row-gap: 10px;
          padding-bottom:15px;
      }
     .toothpaste-banner__slider .hero_slider_btns a{
        max-width: 100%;
          margin: 0 auto;
          padding: 15px 20px;
          font-size: 12px;
      }
    }
      @media only screen and (max-width:7px){
      .toothpaste-banner__slider .slick-arrow{
        display: none !important;
      }
      .toothpaste-banner__slider{
        margin: 10px !important;
      }
      .toothpaste-banner__slider{
        border-radius: 20px;
      }
      .toothpaste-banner__slider img{
        border-radius: 20px;
      }
      .toothpaste-banner__slider toothpaste-banner_content {
          text-align:center;
          padding:5rem !important;
      }
      .mobile_hero_slider_img{
        display:block;
      }
      .desktop_hero_slider_img{
        display:none;
      }
    }
    
    @media only screen and (max-width:767px){
      .toothpaste-banner__slider .slick-arrow{
        display: none !important;
      }
      .toothpaste-banner__slider{
        margin: 5px 15px 15px 15px !important;
      }
      .toothpaste-banner__slider{
        border-radius: 20px;
      }
      .toothpaste-banner__slider img{
        border-radius: 20px;
      }
      .toothpaste-banner__slider toothpaste-banner_content {
          text-align:center;
      }
      .mobile_hero_slider_img{
        display:block;
      }
      .desktop_hero_slider_img{
        display:none;
      }
    }
      @media screen and (max-width: 767px){
        {% if section.settings.use_bg_color != blank %}
          .toothpaste-banner__slider {
            background-color:{{ section.settings.mobile_bg_color }};
          }
        {% endif %}
        }
    
      </style>
    {% schema %}
    {
      "name": "Toothpaste-banner",
      "tag": "section",
      "class": "hero_slider toothpaste-banner__slider spaced-section spaced-section--full-width",
      "settings": [
            {
              "type": "image_picker",
              "id": "bg",
              "label": "Background Image"
            },
            {
              "type": "checkbox",
              "id": "use_bg_color",
              "label": "Use Background Color",
              "default":false
            },
            {
              "type": "color",
              "id": "bg_color",
              "label": "Background Color"
            },
                {
              "type": "color",
              "id": "mobile_bg_color",
              "label": "Mobile Background Color"
            },
             {
          "type": "checkbox",
          "id": "banner_style_2",
          "label": "Banner Style 2",
          "default": false
        }
      ],
      "blocks": [
        {
          "type": "slide",
          "name": "slide",
          "limit": 5,
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
            {
              "type": "image_picker",
              "id": "m_image",
              "label": "Mobile Image"
            },
            {
              "type": "range",
              "id": "image_max_width",
              "min": 300,
              "max": 1400,
              "step": 25,
              "unit": "px",
              "label": "Image Max Width",
              "default": 1400
            },        
            {
              "type": "text",
              "id": "sub_heading",
              "default": "Sub Heading",
              "label": "Sub Heading"
            },
            {
              "type": "textarea",
              "id": "heading",
              "default": "Heading",
              "label": "Heading"
            },
            {
              "type": "textarea",
              "id": "text",
              "default": "Tell your brand's story through images",
              "label": "Text Area"
            },
            {
              "type": "text",
              "id": "button_label1",
              "default": "Button label1",
              "label": "Button Label ",
              "info": "First Button label"
            },
            {
              "type": "url",
              "id": "link1",
              "label": "Button Link"
            },
            {
              "type": "text",
              "id": "button_label2",
              "default": "Button label",
              "label": "Button Label 2",
              "info": "Second Button label"
            },
            {
              "type": "url",
              "id": "link2",
              "label": "Button Link"
            }
          ],
          "limit": 5
        }
      ],
      "presets": [
        {
          "name": "Toothpaste-banner",
          "blocks": [
            {
              "type": "slide"
            }
          ]
        }
      ]
    }
    {% endschema %}
    