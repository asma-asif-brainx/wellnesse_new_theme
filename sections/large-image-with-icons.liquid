        },
        {
            "type": "text",
            "id": "max_width",
            "label": "Max-width (px)",
            "default": "1000",
             "info": "width of the content  of the icon. the iamge  will be  full width."
        },
        {
            "type": "image_picker",
            "id": "bg_image_desktop",
            "label": "Desktop Background Image"
        },
        {
            "type": "image_picker",
            "id": "bg_image_mobile",
            "label": "Mobile Background Image"
        },
        {
