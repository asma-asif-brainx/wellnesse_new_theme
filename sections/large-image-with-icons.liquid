        },
        {
            "type": "range",
            "id": "mb",
            "label": "Margin bottom",
            "min": 0,
            "max": 20,
            "step": 1,
            "default": 0
        }
    ],
    "blocks": [
        {
            "type": "item",
            "name": "Item",
           "limit": 4,
            "settings": [
                {
                    "type": "html",
                    "id": "icon",
                    "label": "Icon (SVG)"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Benefits Title"
