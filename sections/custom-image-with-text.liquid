  "name": "custom-image-with-text",
  "class": "spaced-section spaced-section--full-width img_text_sec remove_margins",
  "settings": [
  {
    "type": "checkbox",
    "id": "custom_bg_color",
    "default": true,
    "label": "Custom Background"
  },
  {
    "type": "checkbox",
    "id": "padding_top_mob",
    "default": false,
    "label": "Enable Padding in Mobile"
  },
  {
    "type": "checkbox",
    "id": "enlarge_heading",
    "default": false,
    "label": "Enlarge Heading"
  },
  {
    "type": "checkbox",
    "id": "paragraph_spacing",
    "default": false,
    "label": "Increase Paragraph Spacing"
  },
  {
    "type": "checkbox",
    "id": "full_width_sec",
    "default": false,
    "label": "Full Width Section"
  },
  {
    "type": "checkbox",
    "id": "remove_left_margin",
    "default": false,
    "label": "Remove Left Margin"
  },
  {
    "type": "checkbox",
    "id": "remove_right_margin",
    "default": false,
    "label": "Remove Right Margin"
  },
  {
    "type": "checkbox",
    "id": "remove_top_margin",
    "default": false,
    "label": "Remove Top Margin"
  },
  {
    "type": "color",
    "id": "bg_color",
    "default":"#eeeeee",
    "label": "Background Color"
  },
  {
    "type": "checkbox",
    "id": "zero_spacing",
    "default": false,
    "label": "Zero Spacing"
  },
  {
    "type": "checkbox",
    "id": "logo",
    "default": false,
    "label": "Enable Wellnesse Logo"
  },
  {
    "type": "checkbox",
    "id": "enlarge_text",
    "default": false,
    "label": "Enlarge Text And Button"
  },
    {
