        },
        {
            "type": "text",
            "id": "product_img_height",
            "label": "Image height (px)",
            "default": "160"
        },
        {
            "type": "checkbox",
            "id": "access_guests",
            "label": "Guests",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "access_members",
            "label": "Members",
            "default": true
        },
        {
