{% liquid 
    assign pt = section.settings.pt | prepend: 'pt-'
    assign pb = section.settings.pb | prepend: 'pb-'
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'

    assign bg_color = section.settings.bg_color

    if section.settings.bg_gradient
        assign bg_color = bg_color | append: ' bg-gradient'
    endif
%}
<style>
  .rich_text_logo{
    width: 50px;
    height: auto;
    margin-bottom: 10px;
  }
  {% if section.settings.description_margin-top %}
   #richtext-{{ section.id }} .description{
     margin-top: 2rem !important;
   }
  {% endif %}
  @media only screen and (max-width: 767px) {
    .rich_text_logo {
        max-width: 35px;
    }
</style>
<section 
    id="richtext-{{ section.id }}" 
    class="richtext enter-view {{ bg_color }} {{ section.settings.text_align }} {{ pt }} {{ pb }} {{ mt }} {{ mb }}">
    <div class="container {% unless section.settings.animation == '' %}animate__animated animate__faster opacity-0{% endunless %}"
        data-animate-class="{{ section.settings.animation }}"
        style="animation-delay: 0ms">
        <div class="mx-auto" style="max-width: {{ section.settings.max_width }}px">
              {% if section.settings.logo %}
                {% assign img = section.settings.logo %}
                <img
                  class="rich_text_logo"
                  srcset="
                    {%- if img.width >= 375 -%}{{ img | image_url: width: 375 }} 375w,{%- endif -%}
                    {%- if img.width >= 550 -%}{{ img | image_url: width: 550 }} 550w,{%- endif -%}
                    {%- if img.width >= 750 -%}{{ img | image_url: width: 750 }} 750w,{%- endif -%}
                    {%- if img.width >= 1100 -%}{{ img | image_url: width: 1100 }} 1100w,{%- endif -%}
                    {%- if img.width >= 1500 -%}{{ img | image_url: width: 1500 }} 1500w,{%- endif -%}
                    {{ img | image_url }} 50w
                  "
                  sizes="(min-width: {{ settings.page_width }}px) 50px, 50px"
                  loading="lazy"
                  alt="{{ img.alt | escape }}"
                  width="{{ img.width }}"
                  height="{{ img.width | divided_by: img.aspect_ratio }}"
                  src="{{ img | image_url: width: 50 }}"
                >
            {% endif %}
            {% render 'section-header' %}
            {% unless section.settings.btn_text == blank %}
                <a 
                    class="btn mb-1 {{ section.settings.btn_color }} {{ section.settings.btn_size }}" 
                    href="{{ section.settings.btn_url }}">
                    {{ section.settings.btn_text }}
                </a>
            {% endunless %}
        </div>
    </div>
</section>

