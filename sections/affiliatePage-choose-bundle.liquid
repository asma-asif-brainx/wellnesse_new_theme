{% assign bg_color = section.settings.bg_color %}
<div id="affiliate_bundle" class="page-width featured_text_sec">
    <div class="section_header">
        {% if section.settings.logo != blank %}
            {% assign img = section.settings.logo %}
            <img class="rich_text_logo"
            srcset="{%- if img.width >= 375 -%}{{ img | image_url: width: 375 }} 375w,{%- endif -%}
            {%- if img.width >= 550 -%}{{ img | image_url: width: 550 }} 550w,{%- endif -%}
            {%- if img.width >= 750 -%}{{ img | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if img.width >= 1100 -%}{{ img | image_url: width: 1100 }} 1100w,{%- endif -%}
            {%- if img.width >= 1500 -%}{{ img | image_url: width: 1500 }} 1500w,{%- endif -%}
            {{ img | image_url }} {{ img.width }}w"
            sizes="(min-width: {{ settings.page_width }}px) 50px, 50px"
            loading="lazy" 
            alt="{{ img.alt | escape }}"
            width="{{ img.width }}"
            height="{{ img.width | divided_by: img.aspect_ratio }}"
            src="{{ img | img_url: '45x55' }}">
        {% endif %}

        {% if section.settings.sup_heading %}
            <h4>{{ section.settings.sup_heading }}</h4>
        {% endif %}

        {% if section.settings.heading != blank %}
            <h1>{{ section.settings.heading }}</h1>
        {% endif %}
        
        {% if section.settings.subheading != blank %}
            <div class="rte">
                <p>{{ section.settings.subheading }}</p>
            </div>
        {% endif %}
    </div>
</div>
<style>

#affiliate_bundle {
    max-width: 1000px;
    margin: 0 auto;
}
#affiliate_bundle .rich_text_logo {
    margin-bottom: 40px;
}
.section_header {
    text-align: center;
    margin: 50px auto;
}

.section_header h1 {
    font-size: 32px;
    margin: 0;
}

.affiliate_bundle .rte {
    max-width: 800px;
    margin: 0 auto;
    margin-top: 20px;
}

@media only screen and (max-width:767px){
    .section_header h1{
        font-size: 24px;
    }
}
</style>
  {% schema %}
  {
    "name": "Affiliat- Choose Bundle",
    "tag": "section",
    "class":"affiliate_bundle",
    "settings": [
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
        },
        {
            "type": "textarea",
            "id": "sup_heading",
            "label": "Super Handing"
        },
        {
            "type": "textarea",
            "id": "heading",
            "default": "Heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "subheading",
            "default": "text",
            "label": "Text"
        }
    ],
    "presets": [
      {
        "name": "Affiliat- Choose Bundle"
      }
    ]
  }
  {% endschema %}
  