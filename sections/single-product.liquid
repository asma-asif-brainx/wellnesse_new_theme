{% liquid 
    assign pt = section.settings.pt | prepend: 'pt-'
    assign pb = section.settings.pb | prepend: 'pb-'
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'

    if section.settings.collection != nil
        for product_splitted in section.settings.collection.products
            assign all_products_random = all_products_random | append: product_splitted.handle | append: ','
        endfor

        assign all_products_random_splited = all_products_random | split: ','
            
        assign min = 0
        assign max = all_products_random_splited.size | minus: 1
        assign diff = max | minus: min
        assign random_number = "now" | date: "%N" | modulo: diff | plus: min
        assign random_product_slug = all_products_random_splited[random_number]
        assign product = all_products[random_product_slug]
    else
        assign product = section.settings.product
    endif

    assign variants_json = product.variants | json
%}

<section 
    id="single-product-{{ section.id }}" 
    class="single-product {{ section.settings.bg_color }} {{ section.settings.text_align }} {{ pt }} {{ pb }} {{ mt }} {{ mb }}">
    <div class="{{ section.settings.container }}">
        <div class="mx-auto" style="max-width: {{ section.settings.max_width }}px;">
            <div class="row {{ section.settings.img_align_desktop }}">
                <div class="col-lg-6 mb-6 mb-lg-0">
                    {% if product == blank %}
                        {{ 'product-1' | placeholder_svg_tag: 'product-item-img bg-light mb-4' }}
                    {% else %}
                        <div class="product-gallery-wrapper">
                            {% render 'product-gallery', product: product , hide_thumbnails:section.settings.hide_thumbnails %}
                            {% render 'product-block-testimonial', suffix: '-gallery' %}
                        </div>
                    {% endif %}
                </div>
                <div class="col-lg-6">
                    <div id="product-content" class="product-content">
                        {% if product != nil %}
                            {% form 'product', product, onsubmit: 'onSubmitAtcForm(this, event)', data-variants: variants_json %}
                                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                                {% liquid
                                    for block in section.blocks
                                        case block.type
                                            when 'title'
                                                render 'product-block-title', product: product, block: block
                                            when 'description'
                                                render 'product-block-description', product: product, block: block
                                            when 'price'
                                                render 'product-block-price', product: product, block: block
                                            when 'variant_selector'
                                                render 'product-block-variant-selector', product: product, block: block
                                            when 'purchase_options'
                                                render 'product-block-purchase-options', product: product, block: block
                                            when 'buy_buttons'
                                                render 'product-block-buy-buttons', product: product, block: block
                                            when 'personalization'
                                                render 'product-block-personalization', product: product, block: block
                                            when 'accordion'
                                                render 'product-block-accordion', product: product, block: block
                                            when 'inventory_bar'
                                                render 'product-block-inventory-bar', product: product, block: block
                                            when 'qty_breaks'
                                                render 'product-block-qty-breaks', product: product, block: block
                                            when 'delivery_info'
                                                render 'product-block-delivery-info', product: product, block: block
                                            when 'trust_badges'
                                                render 'product-block-trust-badges', product: product, block: block
                                            when 'text'
                                                render 'product-block-text', product: product, block: block
                                            when 'liquid_code'
                                                render 'product-block-liquid-code', product: product, block: block
                                            when 'limited_offer'
                                                render 'product-block-limited-offer', product: product, block: block
                                            when 'store_availability'
                                                render 'product-block-store-availability', product: product, block: block
                                            when 'separator'
                                                render 'product-block-separator', product: product, block: block
                                            when 'testimonial'
                                                render 'product-block-testimonial', block: block
                                           when 'variant_description'
                                                 render 'product-block-variant-description', block: block
                                           when 'brand_image'
                                                  render 'product-block-brand-image', block: block
                                          when 'product_switcher'
                                                  render 'product-block-product-switcher', block: block
                                           when 'free_gift_notice'
                                                  render 'product-block-freegift-notice', block: block
                                           when 'marquee'
                                                render 'product-block-marquee', block: block
                                           when 'stories'
                                               render 'product-block-stories', block: block
                                           when 'page-content'
                                                render 'product-block-page-content', block: block
                                            when 'collection_link'
                                                render 'product-block-collection', product: product, block: block
                                           when '@app'
                                                render block
                                endcase
                            endfor
                        %}

                    {% endform %}

                           {% liquid
                
                        render 'product-contact-form'
                    %}

                        {% endif %}
                    </div>
                    {% unless section.settings.description == blank %}
                        <div class="description rte mb-7 {{ section.settings.description_size }}">
                            {{ section.settings.description }}
                        </div>
                    {% endunless %}
                    {% unless section.settings.btn_text == blank %}
                        <a 
                            class="btn {{ section.settings.btn_color }} {{ section.settings.btn_size }}"
                            href="{{ product.url }}">
                            {{ section.settings.btn_text }}
                        </a>
                    {% endunless %}
                </div>
            </div>
        </div>
    </div>
</section>

